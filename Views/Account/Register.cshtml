@using Accounts.ViewModels
@model RegisterModel

@{
    ViewData["Title"] = "Register";
    Layout = "_AddCoursesLayout";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0"><i class="fas fa-user-plus"></i> Register</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post" enctype="multipart/form-data" id="registerForm">
                        <div asp-validation-summary="All" class="alert alert-danger" style="display:none;"></div>

                        <!-- Loading indicator for GPS -->
                        <div id="gpsLoading" class="alert alert-info" style="display:none;">
                            <i class="fas fa-spinner fa-spin"></i> Getting your location...
                        </div>

                        <!-- Email -->
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope"></i> Email Address
                            </label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label">
                                <i class="fas fa-lock"></i> Password
                            </label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Enter password (6-15 characters)" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Confirm Password -->
                        <div class="form-group mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">
                                <i class="fas fa-lock"></i> Confirm Password
                            </label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm your password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Role Selection -->
                        <div class="form-group mb-4">
                            <label asp-for="Role" class="form-label">
                                <i class="fas fa-user-tag"></i> Select Your Role
                            </label>
                            <select asp-for="Role" class="form-control" id="roleSelect">
                                <option value="">-- Select Role --</option>
                                <option value="Donor">Donor - I want to donate</option>
                                <option value="Charity">Charity - I represent a charitable organization</option>
                                <option value="Beneficiary">Beneficiary - I need assistance</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                        <!-- Donor Fields -->
                        <div id="donorFields" class="role-fields">
                            <div class="alert alert-info">
                                <i class="fas fa-heart"></i> Please provide your donation preferences:
                            </div>

                            <!-- Full Name -->
                            <div class="form-group mb-3">
                                <label asp-for="FullName" class="form-label">
                                    Full Name <span class="text-danger">*</span>
                                </label>
                                <input asp-for="FullName" class="form-control" placeholder="Enter your full name" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <!-- Email -->
                            <div class="form-group mb-3">
                                <label asp-for="Email" class="form-label">
                                    Enter your E-Mail <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Email" class="form-control" type="email" placeholder="Enter your email address" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <!-- Type of Donation -->
                            <div class="form-group mb-3">
                                <label class="form-label">Type of donation <span class="text-danger">*</span></label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="TypeOfDonation" value="Monthly" />
                                    <label class="form-check-label">Monthly</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="TypeOfDonation" value="One Time Only" />
                                    <label class="form-check-label">One Time Only</label>
                                </div>
                                <span asp-validation-for="TypeOfDonation" class="text-danger"></span>
                            </div>

                            <!-- Donation Amount -->
                            <div class="form-group mb-3">
                                <label asp-for="DonationAmountInEgp" class="form-label">
                                    Average donation Amount (in EGP) <span class="text-danger">*</span>
                                </label>
                                <input asp-for="DonationAmountInEgp" class="form-control" type="number" step="0.01" placeholder="Enter amount in EGP" />
                                <span asp-validation-for="DonationAmountInEgp" class="text-danger"></span>
                            </div>

                            <!-- Preferred Aid Category -->
                            <div class="form-group mb-3">
                                <label class="form-label">Preferred Aid Category</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="PreferredAidCategory" value="Food Supplies" />
                                    <label class="form-check-label">Food Supplies</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="PreferredAidCategory" value="Shelter / Housing" />
                                    <label class="form-check-label">Shelter / Housing</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="PreferredAidCategory" value="Medical Assistance / Medicine" />
                                    <label class="form-check-label">Medical Assistance / Medicine</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="PreferredAidCategory" value="Utilities (Water/Electricity)" />
                                    <label class="form-check-label">Utilities (Water/Electricity)</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="PreferredAidCategory" value="Clothing" />
                                    <label class="form-check-label">Clothing</label>
                                </div>
                                <span asp-validation-for="PreferredAidCategory" class="text-danger"></span>
                            </div>

                            <!-- Who to Donate To -->
                            <div class="form-group mb-3">
                                <label class="form-label">Who would you like to donate to? <span class="text-danger">*</span></label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="WhoWouldYouLikeToDonateTo" value="A charity" />
                                    <label class="form-check-label">A charity</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="WhoWouldYouLikeToDonateTo" value="A direct beneficiary" />
                                    <label class="form-check-label">A direct beneficiary</label>
                                </div>
                                <span asp-validation-for="WhoWouldYouLikeToDonateTo" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Charity Fields -->
                        <div id="charityFields" class="role-fields" style="display:none;">
                            <div class="alert alert-info">
                                <i class="fas fa-hands-helping"></i> Please provide your charity information:
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="CharityName" class="form-label">
                                            Charity Name <span class="text-danger">*</span>
                                        </label>
                                        <input asp-for="CharityName" class="form-control" placeholder="Enter charity name" />
                                        <span asp-validation-for="CharityName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="CharitySector" class="form-label">
                                            Charity Sector <span class="text-danger">*</span>
                                        </label>
                                        <select asp-for="CharitySector" class="form-control">
                                            <option value="">-- Select Sector --</option>
                                            <option value="Food Supplies">Food Supplies</option>
                                            <option value="Shelter / Housing">Shelter / Housing</option>
                                            <option value="Medical Assistance / Medicine">Medical Assistance / Medicine</option>
                                            <option value="Clothing">Clothing</option>
                                            <option value="Utilities (Water / Electricity)">Utilities (Water / Electricity)</option>
                                        </select>
                                        <span asp-validation-for="CharitySector" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="CasesSponsored" class="form-label">
                                            Cases Sponsored Monthly <span class="text-danger">*</span>
                                        </label>
                                        <select asp-for="CasesSponsored" class="form-control">
                                            <option value="">-- Select Range --</option>
                                            <option value="<20">&lt;20</option>
                                            <option value="20-100">20-100</option>
                                            <option value="100-500">100-500</option>
                                            <option value=">500">&gt;500</option>
                                        </select>
                                        <span asp-validation-for="CasesSponsored" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="MonthlyDonation" class="form-label">
                                            Monthly Donation Amount
                                        </label>
                                        <select asp-for="MonthlyDonation" class="form-control">
                                            <option value="<100 K EGP">&lt;100 K EGP</option>
                                            <option value="100 -500 K EGP">100 -500 K EGP</option>
                                            <option value="500K - 3M EGP">500K - 3M EGP</option>
                                            <option value=">3M EGP">&gt;3M EGP</option>
                                        </select>
                                        <span asp-validation-for="MonthlyDonation" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="CharityNeededAmount" class="form-label">
                                    How Much Do You Need? (EGP) <span class="text-danger">*</span>
                                </label>
                                <input asp-for="CharityNeededAmount" class="form-control" type="number"
                                       placeholder="Enter amount needed" min="1" step="0.01" />
                                <span asp-validation-for="CharityNeededAmount" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-label">
                                    Upload Documentation <span class="text-danger">*</span>
                                </label>
                                <input type="file" class="form-control" name="charity_docs" multiple
                                       accept=".pdf,.doc,.docx,.jpg,.jpeg,.png" />
                                <small class="form-text text-muted">
                                    Upload supporting documents (PDF, Word, Images)
                                </small>
                            </div>
                        </div>

                        <!-- Hidden GPS coordinates -->
                        <input type="hidden" asp-for="Latitude" id="latitude" />
                        <input type="hidden" asp-for="Longitude" id="longitude" />

                        <!-- Success message -->
                        <div id="successAlert" class="alert alert-success" style="display:none;">
                            <i class="fas fa-check-circle"></i> Registration completed successfully!
                        </div>

                        <!-- Submit Button -->
                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary btn-lg w-100" id="submitBtn">
                                <i class="fas fa-user-plus"></i> Register
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script>
        $(document).ready(function () {
            getLocation();              // 📍 جلب الموقع عند تحميل الصفحة
            toggleRoleFields();        // 💼 تفعيل الحقول بناءً على الدور المُختار

            // ⏳ عند تغيير الدور
            $('#roleSelect').on('change', function () {
                toggleRoleFields();
            });

            // 📝 عند إرسال النموذج
            $('#registerForm').on('submit', function (e) {
                const role = $('#roleSelect').val();

                if (role === 'Charity') {
                    handleCharityRegistration();
                } else if (role === 'Beneficiary') {
                    console.log('Beneficiary registration');
                } else if (role === 'Donor') {
                    console.log('Donor registration');
                    // يمكنك هنا تنفيذ إرسال البيانات لطبقة التبرعات
                }
            });
        });

        function getLocation() {
            if (navigator.geolocation) {
                $('#gpsLoading').show();
                navigator.geolocation.getCurrentPosition(
                    function (position) {
                        $('#latitude').val(position.coords.latitude);
                        $('#longitude').val(position.coords.longitude);
                        $('#gpsLoading').hide();
                    },
                    function (error) {
                        $('#gpsLoading').hide();
                        console.warn('Geolocation error:', error.message);
                        $('#latitude').val(30.0444);    // Cairo fallback
                        $('#longitude').val(31.2357);
                    },
                    {
                        enableHighAccuracy: true,
                        timeout: 10000,
                        maximumAge: 300000
                    }
                );
            } else {
                $('#latitude').val(30.0444);
                $('#longitude').val(31.2357);
                console.warn('Geolocation not supported');
            }
        }

        function toggleRoleFields() {
            const role = $('#roleSelect').val();

            // أخفي كل الحقول المرتبطة بالأدوار
            $('.role-fields').hide();

            if (role === 'Donor') {
                $('#donorFields').show();
            } else if (role === 'Charity') {
                $('#charityFields').show();
            } else if (role === 'Beneficiary') {
                $('#beneficiaryFields').show();
            }
        }

        function handleCharityRegistration() {
            setTimeout(function () {
                const charityData = {
                    attributes: {
                        charity_name: $('input[name="CharityName"]').val(),
                        charity_sector: $('select[name="CharitySector"]').val(),
                        field_9: $('select[name="CasesSponsored"]').val(),
                        field_10: $('select[name="MonthlyDonation"]').val(),
                        how_much_do_you_need: parseFloat($('input[name="CharityNeededAmount"]').val()),
                        enter_your_e_mail: $('input[name="Email"]').val()
                    },
                    geometry: {
                        x: parseFloat($('#longitude').val()),
                        y: parseFloat($('#latitude').val()),
                        spatialReference: { wkid: 4326 }
                    }
                };

                $.ajax({
                    url: 'https://services.arcgis.com/LxyOyIfeECQuFOsk/arcgis/rest/services/survey123_2c36d5ade9064fe685d54893df3b37ea_results/FeatureServer/0/addFeatures',
                    type: 'POST',
                    data: {
                        f: 'json',
                        features: JSON.stringify([charityData])
                    },
                    success: function (response) {
                        console.log('Charity data sent successfully:', response);
                        $('#successAlert').show();
                    },
                    error: function (xhr, status, error) {
                        console.error('Failed to send charity data:', error);
                    }
                });
            }, 1500);
        }
    </script>
}