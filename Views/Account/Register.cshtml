@using Accounts.ViewModels
@model RegisterModel

@{
    ViewData["Title"] = "Register";
    Layout = "_AddCoursesLayout";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0"><i class="fas fa-user-plus"></i> Register</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post" enctype="multipart/form-data" id="registerForm">
                        <div asp-validation-summary="All" class="alert alert-danger" style="display:none;"></div>

                        <!-- Loading indicator for GPS -->
                        <div id="gpsLoading" class="alert alert-info" style="display:none;">
                            <i class="fas fa-spinner fa-spin"></i> Getting your location...
                        </div>

                        <!-- Email -->
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope"></i> Email Address
                            </label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label">
                                <i class="fas fa-lock"></i> Password
                            </label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Enter password (6-15 characters)" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Confirm Password -->
                        <div class="form-group mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">
                                <i class="fas fa-lock"></i> Confirm Password
                            </label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm your password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Role Selection -->
                        <div class="form-group mb-4">
                            <label asp-for="Role" class="form-label">
                                <i class="fas fa-user-tag"></i> Select Your Role
                            </label>
                            <select asp-for="Role" class="form-control" id="roleSelect">
                                <option value="">-- Select Role --</option>
                                <option value="Donor">Donor - I want to donate</option>
                                <option value="Charity">Charity - I represent a charitable organization</option>
                                <option value="Beneficiary">Beneficiary - I need assistance</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>



                        <!-- Charity Fields -->
                        <div id="charityFields" class="role-fields" style="display:none;">
                            <div class="alert alert-info">
                                <i class="fas fa-hands-helping"></i> Please provide your charity information:
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="CharityName" class="form-label">
                                            Charity Name <span class="text-danger">*</span>
                                        </label>
                                        <input asp-for="CharityName" class="form-control" placeholder="Enter charity name" />
                                        <span asp-validation-for="CharityName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="CharitySector" class="form-label">
                                            Charity Sector <span class="text-danger">*</span>
                                        </label>
                                        <select asp-for="CharitySector" class="form-control">
                                            <option value="">-- Select Sector --</option>
                                            <option value="Food Supplies">Food Supplies</option>
                                            <option value="Shelter / Housing">Shelter / Housing</option>
                                            <option value="Medical Assistance / Medicine">Medical Assistance / Medicine</option>
                                            <option value="Clothing">Clothing</option>
                                            <option value="Utilities (Water / Electricity)">Utilities (Water / Electricity)</option>
                                        </select>
                                        <span asp-validation-for="CharitySector" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="CasesSponsored" class="form-label">
                                            Cases Sponsored Monthly <span class="text-danger">*</span>
                                        </label>
                                        <select asp-for="CasesSponsored" class="form-control">
                                            <option value="">-- Select Range --</option>
                                            <option value="<20">&lt;20</option>
                                            <option value="20-100">20-100</option>
                                            <option value="100-500">100-500</option>
                                            <option value=">500">&gt;500</option>
                                        </select>
                                        <span asp-validation-for="CasesSponsored" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="MonthlyDonation" class="form-label">
                                            Monthly Donation Amount
                                        </label>
                                        <select asp-for="MonthlyDonation" class="form-control">
                                            <option value="<100 K EGP">&lt;100 K EGP</option>
                                            <option value="100 -500 K EGP">100 -500 K EGP</option>
                                            <option value="500K - 3M EGP">500K - 3M EGP</option>
                                            <option value=">3M EGP">&gt;3M EGP</option>
                                        </select>
                                        <span asp-validation-for="MonthlyDonation" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="CharityNeededAmount" class="form-label">
                                    How Much Do You Need? (EGP) <span class="text-danger">*</span>
                                </label>
                                <input asp-for="CharityNeededAmount" class="form-control" type="number"
                                       placeholder="Enter amount needed" min="1" step="0.01" />
                                <span asp-validation-for="CharityNeededAmount" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-label">
                                    Upload Documentation <span class="text-danger">*</span>
                                </label>
                                <input type="file" class="form-control" name="charity_docs" multiple
                                       accept=".pdf,.doc,.docx,.jpg,.jpeg,.png" />
                                <small class="form-text text-muted">
                                    Upload supporting documents (PDF, Word, Images)
                                </small>
                            </div>
                        </div>


                        <!-- Hidden GPS coordinates -->
                        <input type="hidden" asp-for="Latitude" id="latitude" />
                        <input type="hidden" asp-for="Longitude" id="longitude" />

                        <!-- Success message -->
                        <div id="successAlert" class="alert alert-success" style="display:none;">
                            <i class="fas fa-check-circle"></i> Registration completed successfully!
                        </div>

                        <!-- Submit Button -->
                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary btn-lg w-100" id="submitBtn">
                                <i class="fas fa-user-plus"></i> Register
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script>
        $(document).ready(function() {
            // Get GPS location on page load
            getLocation();

            // Handle role change
            $('#roleSelect').on('change', function() {
                toggleRoleFields();
            });

            // Initialize on page load
            toggleRoleFields();

            // Handle form submission
            $('#registerForm').on('submit', function(e) {
                var role = $('#roleSelect').val();

                if (role === 'Charity') {
                    handleCharityRegistration();
                } else if (role === 'Beneficiary') {
                    // Add any beneficiary-specific handling here
                    console.log('Beneficiary registration');
                }
            });
        });

        function getLocation() {
            if (navigator.geolocation) {
                $('#gpsLoading').show();
                navigator.geolocation.getCurrentPosition(
                    function(position) {
                        $('#latitude').val(position.coords.latitude);
                        $('#longitude').val(position.coords.longitude);
                        $('#gpsLoading').hide();
                        console.log('Location captured:', position.coords.latitude, position.coords.longitude);
                    },
                    function(error) {
                        $('#gpsLoading').hide();
                        console.warn('Geolocation error:', error.message);
                        // Set default coordinates (Cairo, Egypt) if geolocation fails
                        $('#latitude').val(30.0444);
                        $('#longitude').val(31.2357);
                    },
                    {
                        enableHighAccuracy: true,
                        timeout: 10000,
                        maximumAge: 300000
                    }
                );
            } else {
                console.warn('Geolocation not supported');
                // Set default coordinates
                $('#latitude').val(30.0444);
                $('#longitude').val(31.2357);
            }
        }

        function toggleRoleFields() {
            const role = $('#roleSelect').val();
            const donorFields = $('#donorFields');
            const charityFields = $('#charityFields');
            const beneficiaryFields = $('#beneficiaryFields');
            const loadingSurvey = $('#loadingSurvey');

            // Hide all role-specific fields
            $('.role-fields').hide();

            if (role === 'Donor') {
                donorFields.show();
                loadingSurvey.show();
                iframe.attr('src', 'https://arcg.is/eHWC1');

                // Hide loading indicator when iframe loads
                iframe.on('load', function() {
                    loadingSurvey.hide();
                });
            } else if (role === 'Charity') {
                charityFields.show();
            } else if (role === 'Beneficiary') {
                beneficiaryFields.show();
            }
        }

        function handleCharityRegistration() {
            // This will be called after successful registration
            setTimeout(function() {
                const charityData = {
                    attributes: {
                        charity_name: $('input[name="CharityName"]').val(),
                        charity_sector: $('select[name="CharitySector"]').val(),
                        field_9: $('select[name="CasesSponsored"]').val(),
                        field_10: $('select[name="MonthlyDonation"]').val(),
                        how_much_do_you_need: parseFloat($('input[name="CharityNeededAmount"]').val()),
                        enter_your_e_mail: $('input[name="Email"]').val()
                    },
                    geometry: {
                        x: parseFloat($('#longitude').val()),
                        y: parseFloat($('#latitude').val()),
                        spatialReference: { wkid: 4326 }
                    }
                };

                // Send to ArcGIS
                $.ajax({
                    url: 'https://services.arcgis.com/LxyOyIfeECQuFOsk/arcgis/rest/services/survey123_2c36d5ade9064fe685d54893df3b37ea_results/FeatureServer/0/addFeatures',
                    type: 'POST',
                    data: {
                        f: 'json',
                        features: JSON.stringify([charityData])
                    },
                    success: function(response) {
                        console.log('Charity data sent to ArcGIS successfully:', response);
                        $('#successAlert').show();
                    },
                    error: function(xhr, status, error) {
                        console.error('Failed to send charity data to ArcGIS:', error);
                    }
                });
            }, 1500);
        }
    </script>
}