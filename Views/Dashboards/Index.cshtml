@{
    ViewData["Title"] = "Admin Dashboard";
}

<style>
    .card-link {
        text-decoration: none;
        color: inherit;
    }

    .dashboard-card {
        background-color: #343a40;
        color: #f8f9fa;
        border: 1px solid #495057;
        transition: all 0.3s ease-in-out;
    }

        .dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(241, 196, 15, 0.2);
            border-color: #f1c40f;
        }

        .dashboard-card .card-icon {
            color: #f1c40f; /* اللون الذهبي للأيقونة */
        }

        /* --- 💡 تم إضافة هذه التعديلات --- */
        .dashboard-card .card-title {
            color: #f8f9fa; /* لون أبيض فاتح للعنوان الرئيسي */
        }

        .dashboard-card .card-text {
            color: #adb5bd; /* لون رمادي فاتح للنص الوصفي */
        }
    /* --- نهاية التعديلات --- */

</style>

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4"><i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard</h1>
        <p class="lead text-muted">Central control panel for application management.</p>
    </div>

    <div class="row g-4">
        <div class="col-md-6 col-lg-3">
            <a href="https://www.arcgis.com/apps/dashboards/756a6cee4d6c447da152753e74c3d777" target="_blank" class="card-link">
                <div class="card h-100 text-center dashboard-card">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center p-4">
                        <i class="fas fa-chart-pie fa-3x card-icon mb-3"></i>
                        <h5 class="card-title mb-2">Operations Dashboard</h5>
                        <p class="card-text">Monitor cases, analyze needs, and track donation statistics across governorates.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-3">
            <a href="https://experience.arcgis.com/experience/78897f7fc1db424ba77bd1c242532b71" target="_blank" class="card-link">
                <div class="card h-100 text-center dashboard-card">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center p-4">
                        <i class="fas fa-chart-line fa-3x card-icon mb-3"></i>
                        <h5 class="card-title mb-2">Donation Analytics</h5>
                        <p class="card-text">Track and analyze donation trends and Optimal Aid Locations.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-3">
            <a href="https://experience.arcgis.com/experience/481e6b12712049adb1c66841f842e50d" target="_blank" class="card-link">
                <div class="card h-100 text-center dashboard-card">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center p-4">
                        <i class="fas fa-map-marked-alt fa-3x card-icon mb-3"></i>
                        <h5 class="card-title mb-2">Track donations </h5>
                        <p class="card-text">Review and track donations made by donors.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-3">
            <a href="https://omares.maps.arcgis.com/apps/dashboards/6c75619bb6494537909bf65c67cc0dd2" target="_blank" class="card-link">
                <div class="card h-100 text-center dashboard-card">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center p-4">
                        <i class="fas fa-tachometer-alt fa-3x card-icon mb-3"></i>
                        <h5 class="card-title mb-2">Platform Overview</h5>
                        <p class="card-text">Monitor key performance indicators for donors, beneficiaries, and needs.</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>