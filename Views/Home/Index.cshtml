@{
    ViewData["Title"] = "Al Attaa Platform - Home Page";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">


<style>
    /* Hero Section Styles */
    .hero-section {
        background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('https://images.unsplash.com/photo-1532629345422-7515f3d16bb6?q=80&w=2070&auto=format&fit=crop');
        background-size: cover;
        background-position: center;
        color: white;
        padding: 120px 0;
        text-align: center;
    }

        .hero-section h1 {
            font-weight: 700;
            font-size: 3.5rem;
        }

        .hero-section .lead {
            font-size: 1.3rem;
            max-width: 600px;
            margin: 1rem auto;
        }

        .hero-section .btn {
            padding: 12px 30px;
            font-size: 1.1rem;
            border-radius: 50px;
            margin: 5px;
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .hero-section .btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 4px 15px rgba(0,0,0,0.2);
            }

    /* Sections General Styles */
    .section {
        padding: 80px 0;
    }

    .section-title {
        text-align: center;
        margin-bottom: 50px;
        font-weight: 700;
        position: relative;
        padding-bottom: 15px;
    }

        .section-title::after {
            content: '';
            position: absolute;
            display: block;
            width: 60px;
            height: 3px;
            background: #007bff;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
        }

    /* Pillars Section Styles */
    .pillar-card {
        border: none;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .pillar-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

        .pillar-card i {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

    /* Stats Section Styles */
    .stats-section {
        background-color: #f8f9fa;
    }

    .stat-item h3 {
        font-size: 3rem;
        font-weight: 700;
        color: #007bff;
    }

    /* Feature Section Styles */
    .feature-section .row {
        align-items: center;
        margin-bottom: 4rem;
    }

    .feature-section img {
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        width: 100%;
        height: auto;
    }

</style>

