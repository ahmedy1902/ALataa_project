@{
    ViewData["Title"] = "Al Attaa Platform - Home Page";
}

<div class="jumbotron text-center bg-light">
    <h1 class="display-4">Welcome to Al Attaa Platform</h1>
    <p class="lead">We believe in the power of giving. Our platform connects generous hearts with those in need, supporting impactful work of charitable organizations.</p>
    <hr class="my-4">
    <p>Join us today to make a difference in others' lives.</p>
    <p>
        <a href="/Account/Register" class="btn btn-success btn-lg">Register Now for Free</a>
        <a href="/Account/Login" class="btn btn-outline-primary btn-lg ml-2">Login</a>
    </p>
</div>

<div class="container py-5">
    <div class="row text-center">
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title text-primary"><i class="fas fa-hand-holding-heart fa-2x mb-3"></i><br> For Generous Donors</h5>
                    <p class="card-text">Contribute with your generosity to change lives. Donate easily and transparently to trusted charities or individual cases.</p>
                    <a href="/Donate" class="btn btn-outline-primary">Donate Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title text-info"><i class="fas fa-hands-helping fa-2x mb-3"></i><br> For Valued Beneficiaries</h5>
                    <p class="card-text">Submit your request for support easily and securely. We are here to help you access the aid you need.</p>
                    <a href="#" class="btn btn-outline-info">Request Assistance</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title text-success"><i class="fas fa-building fa-2x mb-3"></i><br> For Charitable Organizations</h5>
                    <p class="card-text">Expand your charitable reach and efficiently support those in need. Integrated management for donations and requests.</p>
                    <a href="#" class="btn btn-outline-success">Join as an Organization</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-5">
    <h3>Why Choose Al Attaa Platform?</h3>
    <ul class="list-unstyled">
        <li><i class="fas fa-check-circle text-success mr-2"></i> Ease of Use</li>
        <li><i class="fas fa-check-circle text-success mr-2"></i> Full Transparency</li>
        <li><i class="fas fa-check-circle text-success mr-2"></i> Data Security and Protection</li>
        <li><i class="fas fa-check-circle text-success mr-2"></i> Continuous Technical Support</li>
    </ul>
    <p>
        <a href="#" class="btn btn-link">Discover Our Success Stories</a>
    </p>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-font-awesome-kit-code.js" crossorigin="anonymous"></script>
}